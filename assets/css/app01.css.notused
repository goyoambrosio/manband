@import url(http://fonts.googleapis.com/css?family=Crimson+Text);

slides > slide.dark {
  background: SteelBlue !important;
}


slide.dark li{
    color: PapayaWhip !important;
}

slide.dark h2{
  color: white !important;
}

slide:not(.dark)  h2{
  color: SteelBlue;
}

slide.segue p{
    color: WhiteSmoke;
}

/*
slide:not(.segue) p{
    color: green;
}
*/

slide.segue h2{
 font-family: "Open Sans Condensed";
 font-weight: 700;
}

slide:not(.segue)  h2{
 font-family: "Open Sans Condensed";
 font-weight: 700;
 color: SteelBlue;
}

slide.quote strong {
  color: red;
  font-family: "Crimson Text";
  /* font-size: 1.5em; */
}

